<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="persona" name="personaBeanNombre" class="com.acu.beans.Persona">
		<property name="pais" ref="pais"></property>
		<property name="id" value="1"></property>
		<property name="nombre" value="Alejandro"></property>
		<property name="apodo" value="Ale"></property>
	</bean>
	<bean id="pais" class="com.acu.beans.Pais">
		<property name="nombre" value="Chile"></property>
		<property name="ciudades">
			<list>
				<ref bean="ciudad1"/>
				<ref bean="ciudad2"/>
				<ref bean="ciudad3"/>
			</list>
		</property>
	</bean>
	<bean id="ciudad1" class="com.acu.beans.Ciudad">
		<property name="nombre" value="Santiago"></property>
	</bean>
	<bean id="ciudad2" class="com.acu.beans.Ciudad">
		<property name="nombre" value="Talca"></property>
	</bean>
	<bean id="ciudad3" class="com.acu.beans.Ciudad">
		<property name="nombre" value="Linares"></property>
	</bean>
	<alias name="persona" alias="personaBeanAlias" />
</beans>