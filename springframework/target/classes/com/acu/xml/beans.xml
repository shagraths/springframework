<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="persona" name="personaBeanNombre" class="com.acu.beans.Persona">
		<property name="pais">
			<bean id="pais" class="com.acu.beans.Pais">
				<property name="nombre" value="Chile"></property>
				<property name="ciudad">
					<bean id="ciudad" class="com.acu.beans.Ciudad">
						<property name="nombre" value="Santiago"></property>
					</bean>
				</property>
			</bean>
		</property>
		<property name="id" value="1"></property>
		<property name="nombre" value="Alejandro"></property>
		<property name="apodo" value="Ale"></property>
	</bean>
	<alias name="persona" alias="personaBeanAlias" />
</beans>