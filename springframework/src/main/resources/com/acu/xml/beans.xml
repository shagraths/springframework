<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="persona" class="com.acu.beans.Persona" autowire="byName" scope="singleton" lazy-init="true"></bean>
	<bean id="pais" class="com.acu.beans.Pais">
		<property name="nombre" value="Chile"></property>
	</bean>
	<bean id="ciudad" class="com.acu.beans.Ciudad">
		<property name="nombre" value="Santiago"></property>
	</bean>
</beans>